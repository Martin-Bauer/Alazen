user:Actor
lane:Lane[a]
gui:GUIContainer[a]
pro:Provider[a]
back:Backend[a]
#-----------------
# move lane
user:lane.move Lane
lane:gui.handleMove(pos)
gui:pro.getPosition(pos, zlvl, chr)
pro:back.fetchData()
gui:stop

# zoom on lane
user:lane.zoom Lane
lane:gui.handleZoom(zlvl)
gui:pro.getPosition(pos, zlvl, chr)
pro:back.fetchData()
gui:stop

# select a chromosom
user:lane.select Chromosom
lane:gui.handleChromosom(chr)
gui:pro.getPosition(pos, zlvl, chr)
pro:back.fetchData()
gui:stop

# add a source
user:lane.add Source
lane:gui.handleSource(src, opt)
gui:pro.getPosition(pos, zlvl, chr)
pro:back.fetchData()
gui:stop

#remove a source
user:lane.remove Source
lane:gui.handleSource(src, opt)
gui:pro.getPosition(pos, zlvl, chr)
pro:back.fetchData()
gui:stop

# search for a gene / position
user:lane.search Gene
lane:gui.handleSearch(s)
gui:pro.searchGene(s)
pro:back.fetchData()
gui:pro.getPosition(pos, zlvl, chr)
pro:back.fetchData()
gui:stop
